    scripts/config --enable CONFIG_MALDERLAKE
  elif [[ "$_microarchitecture" = "58" ]]; then
    msg2 "Set CONFIG_GENERIC_CPU"
    scripts/config --enable CONFIG_GENERIC_CPU
  elif [[ "$_microarchitecture" = "59" ]]; then
